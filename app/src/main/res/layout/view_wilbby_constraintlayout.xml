<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/principal_view"
        android:background="@drawable/burguer"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/offer_text"
            android:background="@drawable/rounded_corner_bg_yellow"
            tools:text="Texto1" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_offer"
            app:layout_constraintTop_toButton="parent"
            tools:text="Texto1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/text2"
            app:layout_constraintTop_toBottomOf="@id/text2"
            tools:text="Texto2" />

        <!-- Uso de porcentajes (ancho) -->
        <TextView
            android:id="@+id/text4"
            android:layout_width="10dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="@id/text3"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintWidth_percent="0.5"
            tools:text="Texto3" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
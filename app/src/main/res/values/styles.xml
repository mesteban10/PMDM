<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tamaño de las imagenes de las películas/ series -->
    <style name="AvatarView">
        <item name="android:layout_width">@dimen/image_height</item>
        <item name="android:layout_height">@dimen/image_width</item>
    </style>

    <!-- Tamaño de las imagenes de los usuarios -->
    <style name="UserAvatarView">
        <item name="android:layout_width">@dimen/thumbnails_width</item>
        <item name="android:layout_height">@dimen/thumbnails_height</item>
    </style>

    <!-- Estilo para el texto de los títulos de las películas/series -->
    <style name="TitleView">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo del texto de la descripcion de las películas/series -->
    <style name="DescriptionView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_start_autodescargas</item>
    </style>

    <!-- Estilo de los iconos de descargando y descargado -->
    <style name="Download_icon_view">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
    </style>

    <style name="Downloading_icon_view">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
    </style>

    <!-- Estilo de los iconos de la barra de navegación del footer-->
    <style name="IconNavBar">
        <item name="android:layout_width">@dimen/icon_nav_width</item>
        <item name="android:layout_height">@dimen/icon_nav_height</item>
        <item name="android:layout_marginStart">@dimen/icon_nav_space</item>

    </style>

    <style name="MarginsInfo">
        <item name="android:layout_marginTop">@dimen/margin_info</item>
        <item name="android:layout_marginBottom">@dimen/margin_info</item>
        <item name="android:layout_marginEnd">@dimen/margin_info</item>
        <item name="android:layout_marginStart">@dimen/margin_info</item>
    </style>

    <style name="TextInfoAlert">
        <item name="android:layout_marginStart">@dimen/margin_info</item>
    </style>

    <style name="Vineyard_image_height">
        <item name="android:layout_height">@dimen/vineyard_image_height</item>
    </style>

    <style name="TextAvisosPadding">
        <item name="android:padding">@dimen/padding_text_avisos</item>
    </style>

    <style name="CardViewAlerts">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">@dimen/corner_radious</item>
    </style>



</resources>